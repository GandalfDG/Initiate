<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rit.jack.initiate.InitiativeTrackerActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/currentCharacterCard"
            android:layout_gravity="center_horizontal"
            android:elevation="3dp"
            android:paddingTop="0dp"
            android:longClickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/initiativeNumber"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Character"
                android:id="@+id/currentCharacterName"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editStatusButton"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_add"
                android:contentDescription="@string/edit_status_text" />

        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/characterListView"
            android:layout_weight="1"
            android:paddingRight="2dp"
            android:paddingLeft="2dp" />

        <RelativeLayout
            android:id="@+id/roundNumberFooter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView3" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
